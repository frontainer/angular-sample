<html xmlns:ng="http://angularjs.org">
<head>
    <title>minichat</title>
    <meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=0">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <!-- build:css /css/vendor.css --><!-- bower:css -->
<link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.css" />
<!-- endbower -->
    <link rel="stylesheet" href="/bower_components/ngAnimate/css/ng-animation.css"/>
    <link rel="stylesheet" href="/css/style.css"/>
    <script src="/socket.io/socket.io.js"></script>
</head>
<body id="ng-app" ng-app="app">
<div class="container">
    <header class="page-header">
        <h1>AngularJS Socket.io Demo</h1>
    </header>
    <div id="concents" ng-controller="RootCtrl">
        <form ng-submit="send()">
            <textarea class="form-control" type="text" value="" placeholder="送りたいメッセージ" ng-model="inputMessage" required></textarea>
            <input class="form-control btn btn-primary" type="submit" value="送信" class="" />
        </form>
        <div class="list-group">
            <div ng-repeat="message in messages" class="slide-left list-group-item">
                <h5 class="list-group-item-text">{{message.date | date: 'yyyy/mm/dd HH:MM:ss'}}</h5>
                <p class="list-group-item-heading" ng-bind-html="message.message | lineBreak"></p>
            </div>
        </div>
    </div>
</div>

<!-- build:js /js/vendor.min.js --><!-- bower:js -->
<script src="/bower_components/jquery/dist/jquery.js"></script>
<script src="/bower_components/angular/angular.js"></script>
<script src="/bower_components/angular-sanitize/angular-sanitize.js"></script>
<script src="/bower_components/angular-animate/angular-animate.js"></script>
<script src="/bower_components/bootstrap/dist/js/bootstrap.js"></script>
<!-- endbower --><!-- endbuild -->

<!-- build:js /js/app.js -->
<script src="/js/app.js"></script>
<script src="/js/services/SocketService.js"></script>
<script src="/js/controllers/RootCtrl.js"></script>
<script src="/js/filters/LineBreak.js"></script>
<!-- endbuild -->
</body>
</html>