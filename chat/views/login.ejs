<form ng-submit="submit();" class="form-horizontal" role="form">
    <div class="form-group">
        <label for="roomName" class="col-sm-2 control-label">表示名</label>

        <div class="col-sm-10">
            <input type="text" class="form-control" name="user.userName" ng-model="user.userName" placeholder="表示名を入力..." required>
        </div>
    </div>

    <div class="form-group">
        <label for="roomType" class="col-sm-2 control-label">ルームタイプ</label>

        <div class="col-sm-10">
            <label class="radio-inline">
                <input type="radio" name="user.type" ng-model="user.type" value="enter" ng-checked="true"/> 既存ルーム
            </label>
            <label class="radio-inline">
                <input type="radio" name="user.type" ng-model="user.type" value="create" /> 新規作成
            </label>
        </div>
    </div>
    <div ng-show="user.type === 'enter'">
        <div class="form-group">
            <label for="roomType" class="col-sm-2 control-label">ルームキー</label>
            <div class="col-sm-10">
                <div class="input-group">
                    <div class="input-group-btn">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" ng-init="">入室履歴 <span class="caret"></span></button>
                        <ul class="dropdown-menu">
                            <li value="{{hist.key}}" ng-repeat="hist in histories"><a><span ng-click="user.roomKey = hist.roomKey ">{{hist.roomName}} - {{hist.createDate | date:'yyyy/MM/dd'}} </span> <span ng-click="removeHistory(hist.roomKey)" class="glyphicon glyphicon-remove"></span></a></li>
                        </ul>
                    </div>
                    <input type="text" class="form-control" name="user.roomKey" ng-model="user.roomKey" placeholder="ルームキーを入力..." ng-required="user.type === 'enter'">
                </div>
            </div>
        </div>
    </div>
    <div ng-show="user.type === 'create'">
        <div class="form-group">
            <label for="roomType" class="col-sm-2 control-label">ルーム名</label>

            <div class="col-sm-10">
                <input type="text" class="form-control" name="user.roomName" ng-model="user.roomName" placeholder="ルーム名を入力..." ng-required="user.type === 'create'">
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="roomType" class="col-sm-2 control-label">入室パスワード</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" name="user.password" ng-model="user.password" placeholder="パスワードを入力...">
        </div>
    </div>
    <div class="text-center">
        <input type="submit" value="Enter" class="btn  btn-primary btn-lg"/>
    </div>
    <div class="alert alert-danger" ng-show="errorMessage" ng-cloak>{{errorMessage}}</div>
</form>